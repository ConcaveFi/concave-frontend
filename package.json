{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "postinstall": "turbo run postinstall",
    "build:cave": "turbo run build --filter=cave...",
    "dev:cave": "turbo run dev --filter=cave...",
    "test:cave": "turbo run test --filter=cave...",
    "dev": "turbo run dev --filter=blockchain --filter=cave...",
    "clean": "rimraf \"./**/{node_modules,dist,.turbo,.next,.eslintcache,.vercel,.cache}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-next": "^12.2.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.3.1"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "yarn": ">=1.19.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.0",
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "version": "3.0.0"
}
