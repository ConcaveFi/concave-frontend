{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "postinstall": "turbo run postinstall",
    "build:cave": "turbo run build --scope=cave --include-dependencies --no-deps",
    "dev:cave": "turbo run dev --scope=cave --include-dependencies --no-deps",
    "clean": "rimraf \"./**/{node_modules,dist,.turbo,.next,.eslintcache,.vercel}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.5"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "yarn": ">=1.19.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.0"
}
